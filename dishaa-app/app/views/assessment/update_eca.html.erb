<% provide(:title, 'Assessment') %>
<div class="header row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag "dishaa_logo.png", class: "img-responsive minor-logo" %>
  </div>
  <div class="nav-1 col-xs-8">
    <div class="welcome-text row">
      Signed in as <%= @teacher.first_name + ' ' + (@teacher.last_name || "") %>
    </div>
    <div class="row text-right">
        <%= link_to 'Go to homepage', "/teachers/#{@teacher.id}", method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>
</div>
<div class="row">
  <h1 class="text-center">
    ECA entered for <%= @student.first_name + ' ' + (@student.last_name || '') %>
    <%= link_to 'Enter another record', "/teachers/#{@teacher.id}/assessment/eca/#{@student.id}", method: :get, style: "padding-left:2%;" %>
  </h1>
</div>
<div class="row" style="margin-top:5%">
  <div class="col-lg-offset-1">
    <%= link_to "Enter marks for #{@student.first_name}", "/teachers/#{@teacher.id}/assessment/marks/#{@student.id}" %>
  </div>
</div>
<div class="row">
  <div class="col-lg-offset-1">
    <%= link_to "Go back to list of all students", "/teachers/#{@teacher.id}/assessment" %>
  </div>
</div>