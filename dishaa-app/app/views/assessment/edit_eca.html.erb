<% provide(:title, 'Assessment') %>
<div class="header row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag "dishaa_logo.png", class: "img-responsive minor-logo" %>
  </div>
  <div class="nav-1 col-xs-8">
    <div class="welcome-text row">
      Signed in as <%= @teacher.first_name + ' ' + (@teacher.last_name || "") %>
    </div>
    <div class="row text-right">
        <%= link_to 'Go to homepage', "/teachers/#{@teacher.id}", method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>
</div>
<div class="row">
  <h1 class="text-center">Enter ECA record for <%= @student.first_name + ' ' + (@student.last_name || "") %></h1>
</div>
<%= form_for :eca_record, url: "/teachers/#{@teacher.id}/assessment/eca/#{@student.id}" do |f| %>
  <div class="row">
    <div class="col-lg-5 col-lg-offset-1">
      <%= f.label :text, "Enter ECA Record" %>
      <%= f.text_area :text, rows: 10, class: "form-control custom-textarea" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5 col-lg-offset-1">
      <%= f.label :doc_file, "Upload Document" %>
      <span style="padding-left:2%;font-size:1.35rem;color:grey">Optional</span>
      <%= f.file_field :doc_file %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5 col-lg-offset-1">
      <%= f.label :doc_desc, "Enter Document Description" %>
      <span style="padding-left:2%;font-size:1.35rem;color:grey">Optional</span>
      <%= f.text_area :doc_desc, rows: 5, class: "form-control custom-textarea" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3"><%= submit_tag "Submit", class: "btn btn-primary btn-submit" %></div>
  </div>
<% end %>
<div class="row" style="margin-top:5%">
  <div class="col-lg-offset-1">
    <%= link_to "Enter marks for #{@student.first_name}", "/teachers/#{@teacher.id}/assessment/marks/#{@student.id}" %>
  </div>
</div>
<div class="row">
  <div class="col-lg-offset-1">
    <%= link_to "Go back to list of all students", "/teachers/#{@teacher.id}/assessment" %>
  </div>
</div>