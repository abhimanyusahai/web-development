<% provide(:title, 'Student Data') %>
<div class="header row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag "dishaa_logo.png", class: "img-responsive minor-logo" %>
  </div>
  <div class="nav-1 col-xs-8">
    <div class="welcome-text row">
      Signed in as <%= @teacher.first_name + ' ' + (@teacher.last_name || "") %>
    </div>
    <div class="row text-right">
        <%= link_to 'Go to homepage', "/teachers/#{@teacher.id}", method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>
</div>
<h1 class="text-center">Student Data</h1>
<div class="table-box center-block">
  <%= form_tag("/teachers/#{@teacher.id}/student_data/delete") %>
    <% counter = 2 %>
    <% @students.each do |s| %>
      <% if counter % 2 == 0 %>
        <div class="row">
      <% else %>
        <div class="row table-row-dark">
      <% end %>
        <div class="col-xs-1"><%= check_box_tag s.id.to_s %></div>
        <div class="col-xs-4"><%= s.first_name + (s.last_name ? ' ' + s.last_name : "") %></div>
        <div class="col-xs-4 text-center"><%= link_to "View/Modify Details", "/teachers/#{@teacher.id}/student_data/#{s.id.to_s}/details/edit" %></div>
        <div class="col-xs-2 text-center"><%= link_to "View Report", "/teachers/#{@teacher.id}/student_data/#{s.id.to_s}/reports/edit" %></div>
      </div>
      <% counter += 1 %>
    <% end %>
</div>