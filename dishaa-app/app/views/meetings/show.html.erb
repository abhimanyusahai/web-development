<% provide(:title, 'Meetings') %>
<div class="header row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag "dishaa_logo.png", class: "img-responsive minor-logo" %>
  </div>
  <div class="nav-1 col-xs-8">
    <div class="welcome-text row">
      Signed in as <%= @teacher.first_name + ' ' + (@teacher.last_name || "") %>
    </div>
    <div class="row text-right">
        <%= link_to 'Go to homepage', "/teachers/#{@teacher.id}", method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>
</div>
<h1 class="text-center">Upcoming Meetings</h1>
<div class="row">
  <div class="col-lg-offset-1 col-lg-10 meeting-box">
    <ul>
      <% @meetings.each do |meeting| %>
        <li>Meeting on <strong class="text-danger"><%= meeting.date.strftime("%B %d, %Y") %> 
        (<%= meeting.date.strftime("%A") %>)</strong><br>
        <strong>Time:</strong> <%= meeting.time %><br>
        <strong>Venue:</strong> <%= meeting.venue %><br>
        <strong>Agenda:</strong> <%= meeting.agenda %></li>
        <br>
      <% end %>
    </ul>
  </div>
</div>
<% if @teacher.admin %>
  <div class="row">
    <div class="col-lg-offset-1">
      <%= link_to "Edit meeting schedule", "/teachers/#{@teacher.id}/meetings/edit" %> 
    </div>
  </div>
<% end %>