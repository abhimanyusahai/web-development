<% provide(:title, @teacher.first_name + ' ' + @teacher.last_name) %>
<div class="header row">
  <div class="col-xs-3 col-xs-offset-1">
    <%= image_tag "dishaa_logo.png", class: "img-responsive minor-logo" %>
  </div>
  <div class="nav-1 col-xs-8">
    <div class="welcome-text row">
      Signed in as <%= @teacher.first_name + ' ' + (@teacher.last_name || "") %>
    </div>
    <div class="row text-right">
        <%= link_to 'Go to homepage', "/teachers/#{@teacher.id}", method: :get %>
        <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-5 col-sm-offset-1">
    <h1>Updates</h1>
    <div class="update-box">
      <ul>
          <li>GBM on 23rd November... <br><%= link_to "Read more", "#" %></li>
          <li><strong class="text-danger">Reminder</strong>: Diwali event on 8th November... <br><%= link_to "Read more", "#" %></li>
          <li>Fundraising meet was a mega-success!... <br><%= link_to "Read more", "#" %></li>
      </ul>
    </div>  
  </div>
  <div class="col-lg-5">
    <div class="row">
      <div class="col-xs-6"><%= link_to "Meeting Schedule", "/teachers/#{@teacher.id}/meetings", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Attendance", "/teachers/#{@teacher.id}/attendance", class: "btn btn-primary btn-ctrl-panel", method: :get %></div>
      <div class="col-xs-6"><%= link_to "Assessments", "/teachers/#{@teacher.id}/assessment", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Timetables", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Student Data", "/teachers/#{@teacher.id}/student_data", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Assembly", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Finances", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Mentors", "/teachers/#{@teacher.id}/mentors", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Teacher Duties", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "Computer Lab", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
      <div class="col-xs-6"><%= link_to "About Us", "#", class: "btn btn-primary btn-ctrl-panel" %></div>
    </div>
  </div>
</div>